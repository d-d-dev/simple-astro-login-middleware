---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login">
    <main class="min-h-screen flex items-center">
        <form class="bg-fg1 text-text-light w-[480px] m-auto rounded-md p-8 grid gap-3"
            action="/api/login" method="POST">
            <div class="grid grid-cols-[auto_1fr] items-center justify-center">
                <img src="logo.png" alt="caracol-logo" height="64" width="64" loading="lazy" />
                <h2 class="text-2xl text-center font-bold">Login / Acceso</h2>
            </div>
            <div class="grid">
                <label class="text-xs font-bold" for="login-user">Usuario</label>
                <input class="bg-fg2 px-2 text-xl" type="text" name="login-user" id="login-user" autocomplete="off">
            </div>
            <div class="grid">
                <label class="text-xs font-bold" for="login-pass">Contrase√±a</label>
                <input class="bg-fg2 px-2 text-xl" type="password" name="login-pass" id="login-pass" autocomplete="off">
            </div>
            <button class="text-xl font-bold p-2 bg-accent2" type="submit">Login</button>
        </form>
    </main>
</Layout>